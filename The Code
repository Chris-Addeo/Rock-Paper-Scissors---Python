#User input of data
print("Rock, Paper, Scissors")
user=input("Rock, paper, or scissors? ")
print()

#Computer's Decision
comp=randint(1,3)
if comp==1:
    print("The computer played rock.")
elif comp==2:
        print("The computer played paper.")
else:
    print("The computer played scissors.")

#User's Decision
uc=""
if user.lower=="rock":
    uc=1
elif user.lower=="paper":
        user=2
else:
    uc=3

#Output / Results of the Game
if uc==comp:
    print("You tied with the computer!")
elif uc==1 and comp==3 or uc==2 and comp==1 or uc==3 and comp==1:
    print("You won the game!")
else:
    print("You lost the game!")
